<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SearchCityActivity"
    android:padding="16dp"
    android:background="@drawable/background_clouds">

    <EditText
        android:id="@+id/insert_cityname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/insert_cityname"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:maxLines="1"
        android:ellipsize="none"
        android:textColorHint="@color/white"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_find_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/insert_cityname"
        android:text=">"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.ActionButton"
        android:textColor="@color/white" />

</RelativeLayout>